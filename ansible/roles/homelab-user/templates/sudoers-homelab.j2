# {{ ansible_managed }}
# Sudo permissions for homelab infrastructure

# Allow users in homelab group to manage homelab services and tools
%{{ homelab_group }} ALL=(ALL) NOPASSWD: /bin/systemctl start docker-registry, /bin/systemctl stop docker-registry, /bin/systemctl restart docker-registry, /bin/systemctl status docker-registry, /bin/journalctl -u docker-registry*, /usr/local/bin/k3s ctr images*, /bin/systemctl restart networking, /sbin/iptables *

# Allow users in homelab group to switch to homelab user without password
%{{ homelab_group }} ALL=({{ homelab_user }}) NOPASSWD: ALL
