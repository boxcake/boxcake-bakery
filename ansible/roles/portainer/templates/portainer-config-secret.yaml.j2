# {{ ansible_managed }}
# Portainer Configuration Secret
apiVersion: v1
kind: Secret
metadata:
  name: portainer-config
  namespace: default
type: Opaque
data:
  # Admin password (base64 encoded): {{ portainer_admin_password }}
  admin-password: {{ portainer_admin_password | b64encode }}
  # Registry configuration
  registry-config: {{ portainer_registry_config | to_json | b64encode }}
