# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# Portainer Configuration
portainer_admin_password = "homelab123!"      # Change this password!
portainer_storage_size   = "2Gi"

# Registry Configuration
registry_image          = "registry:2.8"
registry_port           = 5000              # External LoadBalancer port
registry_storage_size   = "10Gi"            # Storage for registry data
allow_registry_deletion = true              # Allow image deletion via UI

# MetalLB Configuration
metallb_pool_name = "homelab-services"

# Kubernetes Configuration
namespace = "default"